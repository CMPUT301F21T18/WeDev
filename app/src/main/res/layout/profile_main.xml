<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".eventInfo.HabitInfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/big_btn"
            android:gravity="center"
            android:text="Username"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/big_btn"
            android:gravity="center"
            android:text="Friends List"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/big_btn"
            android:gravity="center"
            android:text="Recieved Request"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/big_btn"
            android:gravity="center"
            android:text="Pending Request"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/big_btn"
            android:gravity="center"
            android:text="Add Friend"
            android:textColor="#ffffff"
            android:textSize="18sp"

            />
    </LinearLayout>


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:theme="@style/Theme.ZoomSoft.AppBarOverlay">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?actionBarSize"
            android:padding="@dimen/appbar_padding"
            android:text="Profile"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:textColor="#3C444C"
            android:textStyle="bold" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/profile_info_tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#32413A"
            app:tabIndicatorColor="#FFFFFF"
            app:tabRippleColor="#FFFFFF"
            app:tabSelectedTextColor="#FFFFFF"
            app:tabTextColor="#FFFFFF" />
    </com.google.android.material.appbar.AppBarLayout>
</RelativeLayout>


