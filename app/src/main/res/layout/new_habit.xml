<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="125dp">
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="223dp"
        android:layout_height="264dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="450dp">

        <LinearLayout
            android:id="@+id/habit_days_linear_layout"
            android:layout_width="209dp"
            android:layout_height="204dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="240dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunday"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monday"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tuesday"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thursday"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saturday"
                    android:textSize="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/switch_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Switch>

                <Switch
                    android:id="@+id/switch_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Switch>

                <Switch
                    android:id="@+id/switch_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Switch>

                <Switch
                    android:id="@+id/switch_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Switch>

                <Switch
                    android:id="@+id/switch_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Switch>

                <Switch
                    android:id="@+id/switch_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Switch>

                <Switch
                    android:id="@+id/switch_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Switch>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="214dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="50dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/habit_reason_edit_text"
            android:layout_width="199dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="240dp"
            android:hint="Reason"
            android:maxLength="30" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="255dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="214dp"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="170dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/habit_description_edit_text"
            android:layout_width="199dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="240dp"
            android:hint="Description"
            android:maxLength="30" />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ZoomSoft.AppBarOverlay">
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#F0F4F3"
        app:layout_anchor="@+id/textView"
        app:layout_anchorGravity="top|center"
        app:popupTheme="@style/Theme.ZoomSoft.PopupOverlay" />

    <ImageButton
        android:id="@+id/edit_habit_check"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_baseline_check_circle_24"
        android:cropToPadding="false"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/edit_habit_stop"
        android:layout_width="64dp"
        android:layout_height="59dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_baseline_remove_circle_24"
        android:cropToPadding="false"
        android:scaleType="centerInside" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="78dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/ic_baseline_person_pin_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lora_bold"
        android:text="Habits"
        android:textColor="#3C444C"
        android:textSize="34sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="270dp"
        android:layout_marginBottom="375dp"
        android:text="Title        |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="270dp"
        android:layout_marginBottom="255dp"
        android:text="Private    |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginRight="270dp"
        android:text="Reason    |"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="240dp"
        android:layout_marginRight="280dp"
        android:text="Days        |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="125dp"
        android:layout_marginRight="270dp"
        android:text="Input date |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:layout_marginRight="270dp"
        android:text="Description |"
        android:textSize="24sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon7"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="375dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/habit_title_edit_text"
            android:layout_width="208dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="240dp"
            android:hint="Title"
            android:maxLength="20" />
    </com.google.android.material.textfield.TextInputLayout>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="275dp"
        android:layout_height="129dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_anchor="@+id/custom_end_icon5"
        app:layout_anchorGravity="center" />

    <Switch
        android:id="@+id/public_private_switch"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="240dp"
        android:inputType="text"
        app:layout_anchor="@+id/custom_end_icon3"
        app:layout_anchorGravity="center"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>