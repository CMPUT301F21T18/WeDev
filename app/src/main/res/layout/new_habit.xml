<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon5"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="60dp">
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="340dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/habit_days_edit_text"
            android:layout_width="213dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="240dp"
            android:hint="Days"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="200dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/habit_reason_edit_text"
            android:layout_width="213dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="240dp"
            android:maxLength="30"
            android:hint="Reason" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon3"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="100dp">

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.ZoomSoft.AppBarOverlay">
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#F0F4F3"
        app:layout_anchor="@+id/textView"
        app:layout_anchorGravity="top|center"
        app:popupTheme="@style/Theme.ZoomSoft.PopupOverlay" />

    <ImageButton
        android:id="@+id/edit_habit_check"
        android:layout_width="78dp"
        android:layout_height="79dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_baseline_check_circle_24"
        android:cropToPadding="false"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/edit_habit_stop"
        android:layout_width="78dp"
        android:layout_height="79dp"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@drawable/ic_baseline_remove_circle_24"
        android:cropToPadding="false"
        android:scaleType="centerInside" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="78dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/ic_baseline_person_pin_24" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/lora_bold"
        android:text="Habits"
        android:textColor="#3C444C"
        android:textSize="34sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="270dp"
        android:layout_marginBottom="260dp"
        android:text="Input text |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="270dp"
        android:layout_marginBottom="100dp"
        android:text="Private     |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:layout_marginRight="270dp"
        android:text="Input text |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="340dp"
        android:layout_marginRight="270dp"
        android:text="Days        |"
        android:textSize="24sp" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginRight="270dp"
        android:text="Input date |"
        android:textSize="24sp" />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/custom_end_icon7"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="219dp"
        android:layout_height="51dp"
        android:layout_gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="260dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/habit_title_edit_text"
            android:layout_width="213dp"
            android:layout_height="37dp"
            android:layout_gravity="center"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="240dp"
            android:maxLength="20"
            android:hint="Title" />
    </com.google.android.material.textfield.TextInputLayout>

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="275dp"
        android:layout_height="129dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        app:layout_anchor="@+id/custom_end_icon5"
        app:layout_anchorGravity="center" />

    <Switch
        android:id="@+id/public_private_switch"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_gravity="center"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="240dp"
        android:inputType="text"
        app:layout_anchor="@+id/custom_end_icon3"
        app:layout_anchorGravity="center" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>